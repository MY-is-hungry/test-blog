<% content_for :title, @post.title %>

<article>
  <h1><%= @post.title %></h1>
  <div>
    <%= simple_format(@post.body) %>
  </div>
  <p><small>Published <%= time_ago_in_words(@post.created_at) %> ago</small></p>
</article>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Back", posts_path %>
</p>

